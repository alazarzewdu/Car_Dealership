<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/car_info_card"
    android:background="@color/purple_500">

    <TextView
        android:id="@+id/car_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Car Name"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:textSize="15sp">
    </TextView>

    <ImageView
        android:id="@+id/car_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/car_name"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        android:src="@mipmap/ic_launcher"></ImageView>

    <TextView
        android:id="@+id/car_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/car_name"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/car_image"
        android:padding="3dp"
        android:text="Description"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"></TextView>

    <TextView
        android:id="@+id/car_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textColor="@color/white"
        android:layout_toRightOf="@id/car_image"
        android:layout_below="@id/car_description"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="3dp"
        android:layout_margin="5dp">
    </TextView>

    <TextView
        android:id="@+id/car_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/car_price"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/car_image"
        android:padding="3dp"
        android:text="Model"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@id/car_image">

        <Button
            android:id="@+id/edit_car"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text="Edit Cars"
            android:backgroundTint="@color/white"
            android:textColor="@color/purple_500"
            android:textAllCaps="false">
        </Button>

        <Button
            android:id="@+id/view_car_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text="View Details"
            android:backgroundTint="@color/white"
            android:textColor="@color/purple_500"
            android:textAllCaps="false">
        </Button>

    </LinearLayout>

</RelativeLayout>